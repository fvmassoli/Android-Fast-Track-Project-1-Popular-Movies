<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textSize">@dimen/Headline</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/movie_title_left_margin</item>
        <item name="android:layout_marginRight">@dimen/movie_title_right_margin</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">@dimen/Subheading</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

</resources>
